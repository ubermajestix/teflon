<%for post in @posts %>
	<b><%= post.title %></b><br/>
	<i>by: <%= post.user.login if post.user_id %> on <%=nice_time post.updated_at %> </i><br/>
	<%= post.body_html %><br/>
	<%= link_to 'Edit', edit_post_path(post) %>
	<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
	<hr/>
<%end%>